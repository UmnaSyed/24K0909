#include <stdio.h>
#include <string.h>
#include <time.h>
#include <stdlib.h>

int main() 
{
    int i, j, k, score=0; 
    char array[6][5]; 
    char tosearch[100];

    while (1) 
    {
        srand(time(NULL));

        // filling the array with random letters
        for (i = 0; i < 5; i++) 
        {
            for (j = 0; j < 5; j++) 
            {
                array[i][j] = 'A' + rand() % 26; // random capital letters
            }
        }

        // filling the last row 
        array[5][0] = '1';
        array[5][1] = '2';
        array[5][2] = '3';
        array[5][3] = '4';
        array[5][4] = 'Q';

        // printing the array
        printf("WORD SEARCH:\n");
        for (int i = 0; i < 6; i++) 
        {
            for (int j = 0; j < 5; j++) 
            {
                printf("%c ", array[i][j]);
            }
            printf("\n");
        }

        // inputting search string
        printf("Enter a string. To quit the game, enter 'END': ");
        fgets(tosearch, sizeof(tosearch), stdin);
        tosearch[strcspn(tosearch, "\n")] = 0; // removing newline

        if (strcmp(tosearch, "END") == 0) 
            {break;}

        // searching the string
        int found=0;
        int length = strlen(tosearch);

        // horizontal 
        for (i=0; i<6; i++) 
        {
            for (j=0; j<=5 - length; j++) 
            {
                int matched=1;
                for (k=0; k<length; k++) 
                {
                    if (array[i][j + k] != tosearch[k]) 
                    {
                        matched = 0;
                        break;
                    }
                }
                if (matched == 1) 
                {
                    found = 1;
                    break;
                }
            }
            if (found == 1) 
                {break;}
        }

        // vertical searching
        if (found == 0) 
        {
            for (j=0; j<5; j++) 
            {
                for (i=0; i<=6 - length; i++) 
                {
                    int matched=1;
                    for (k=0; k<length; k++) 
                    {
                        if (array[i + k][j] != tosearch[k]) 
                        {
                            matched = 0;
                            break;
                        }
                    }
                    if (matched == 1) 
                    {
                        found = 1;
                        break;
                    }
                }
                if (found == 1) 
                    {break;} 
            }
        }

        // printing score
        if (found == 1) 
        {
            score++;
            printf("%s is present\nScore: %d\n", tosearch, score);
        } 
        else 
        {
            score--;
            printf("%s is not present\nScore: %d\n", tosearch, score);
        }
    }
}
