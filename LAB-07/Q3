#include<stdio.h>
int main (){
int i, min, max, arr[i];
printf("Enter the number of elements in your array");
scanf("%d",&i);
for (int j=0; j<i; j++){
printf("Enter your elements");
scanf("%d", &arr[j]);
}
max=arr[0];
min=arr[0];
for (int j =0; j<i; j++){
if (arr[j]>max){
max=arr[j];
}
if (arr[j]<min){
min=arr[j];
}
}
printf("The maximum value stored in this array is %d\n", max);
printf("The minimum value stored in this array is %d\n", min);
}
