#include<stdio.h>
int main() {
int num;
printf("enter a number");
scanf("%d",&num);
if (num > 0){
  if (num%2==0){
      printf("your number is positive and an even number");
 } else {
       printf("your number is positive and an odd number");
     }
} else if (num<0){
    printf(" your number is a negative number ");
} else {
printf("the number is zero");
}
return 0;
}

